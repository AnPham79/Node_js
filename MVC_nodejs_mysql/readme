tạo database.js trong util
cài đặt npm install mysql2
vào database require tới misql2 rồi createPool để conent host
vào app tạo db = require

const mysql = require('mysql2');

const pool = mysql.createPool({
    host: 'localhost',
    user: 'root',
    database: 'node_js',
    password: 'thienha10'
});

module.exports = pool.promise();

sau đó db.execute(câu truy vấn để thực thi truy vấn)

db.execute("SELECT * FROM products")
.then(result => {
    console.log(result[0], result[1])
}).catch(err => {
    console.log(err)
});